<% if !notice.blank? %>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %> 

<h1>Bugs</h1>

<table class="table table-hover">
  <thead>
    <tr>

      <th class="col-md-2">Title</th>
      <th class="col-md-2">Description</th>
      <th class="col-md-2">Issue type</th>
      <th class="col-md-2">Priority</th>
      <th class="col-md-2">Status</th>
      <th class="col-md-2">Author</th>
      <th class="col-md-2">Actions</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
        <td class="col-md-2"><%= bug.title %></td>
        <td class="col-md-2"><%= bug.description %></td>
        <td class="col-md-2"><%= bug.issue_type %></td>
        <td class="col-md-2"><%= bug.priority %></td>
        <td class="col-md-2"><%= bug.status %></td>
        <td>
          <%= (bug.author.try(:lname)) || "NA" %>
        </td>
        <td class="col-md-2">
          <%= link_to bug, class: "btn btn-default btn-sm" do %>
            <i class="glyphicon glyphicon-eye-open"></i> Show
          <% end %>
          <%= link_to edit_bug_path(bug), class: "btn btn-default btn-sm" do %>
            <i class="glyphicon glyphicon-pencil"></i> Edit
          <% end %>
          <%= link_to bug, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" do %>
            <i class="glyphicon glyphicon-trash"></i> Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bug', new_bug_path, :class => "btn btn-primary" %>
